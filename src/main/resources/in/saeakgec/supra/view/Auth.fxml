<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="in.saeakgec.supra.controller.AuthController">
   <children>
      <BorderPane layoutX="200" layoutY="200" prefHeight="400.0" prefWidth="400.0">
         <top>
            <ImageView fitHeight="150.0" fitWidth="150.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="false" BorderPane.alignment="CENTER">
               <viewport>
                  <Rectangle2D height="150.0" minX="150.0" minY="150.0" width="150.0" />
               </viewport>
               <image>
                  <Image url="@../img/logo.png" />
               </image>
            </ImageView>
         </top>
         <bottom>
            <Button mnemonicParsing="false" text="Log in" BorderPane.alignment="CENTER" />
         </bottom>
         <center>
            <HBox prefHeight="172.0" prefWidth="400.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField promptText="Username" />
                  <PasswordField promptText="Password" />
               </children>
            </HBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
